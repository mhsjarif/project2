<div id="a-page">
<h3><%= @attraction.name %></h3>
<div id="a-image">
    <img src="<%= @attraction.ride_image %>">
</div>
<div>
    <%= @attraction.description %>
</div>

<div id="new-review">
<h5>Well? Was it fun? Write your review...</h5>
<%= form_for [@attraction, @review] do |f| %>
    <div class="field">
        <%= f.label :content %>
        <%= f.text_field :content %>
    </div>
    <div class="field">
        <%= f.label :rating %>
        <%= f.text_field :rating %>
    </div>
    
    <div class="field">
        <%= f.label :recommend %>
        <%= f.text_field :recommend %>
  </div>
    <button class="btn waves-effect waves-light" type="submit" name="action">
    Submit
    </button>
<% end %>
</div>
    <div id="all-reviews">
        <h3>REVIEWS</h3>
        <% @attraction.reviews.each do |review| %>
            <h4>
                "<%= review.content %>" - <%= review.user.name %> <%= review.user.created_at.strftime("%m/%d/%y") %>
                <%= link_to "Delete", review_path(review), method: "delete" if review.user == current_user %>
            </h4>
        <% end %>
    </div>
</div>